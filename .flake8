[flake8]
# Rules
ignore = D212, SFS1, SFS2, SFS301, W503
extend-ignore = E203
exclude =
    # It is not necessary to traverse through these directories and files
    .git
    .pytest_cache
    .venv
    .site
per-file-ignores =
    tests/*.py: A400, D100, D103, S101
    cline/*: PT

# Configuration
enable-extensions = B1
max-line-length = 88
